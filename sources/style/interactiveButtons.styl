.touch-buttons
    display none
    position absolute
    bottom 0
    left 0
    height 0
    width 100%
    pointer-events none
    -webkit-user-select none
    -moz-user-select none
    user-select none

    &.is-active
        display block
    
    .overlay
        display none
        position absolute
        left 0
        bottom 0
        width 100%
        min-height 90px
        height 15vh
        background radial-gradient(ellipse farthest-side at bottom, #1D1721, #1D172100)
        background linear-gradient(#1D172100, #1D172199)

        &.is-visible
            display block

    .list
        display flex
        align-items center
        justify-content center
        position absolute
        bottom 0
        left 0
        width 100%
        color #ffffff
        font-family "Amatic SC", sans-serif
        font-weight 700
        font-size 64px
        min-height 120px
        height 20vh

        @media only screen and (max-width 520px)
            font-size 48px

        button
            display none
            height 80px
            justify-content center
            align-items center
            padding-left 7vw
            padding-right 7vw
            pointer-events auto

            &.is-visible
                display flex

            &.interact
            &.unstuck
                @media only screen and (max-width 520px)
                    padding-left 3.5vw
                    padding-right 3.5vw

        .previous
            &::after
                content ''
                display block
                width 20px
                height 36px
                background url('../ui/actions/actions-icon-arrow.webp')
                background-size 20px 36px

        .next
            &::after
                content ''
                display block
                width 20px
                height 36px
                background url('../ui/actions/actions-icon-arrow.webp')
                background-size 20px 36px
                transform rotate(180deg)

        .close
            &::after
                content ''
                display block
                width 36px
                height 36px
                background url('../ui/actions/actions-icon-close.webp')
                background-size 36px 36px

        .open
            &::after
                content ''
                display block
                width 38px
                height 38px
                background url('../ui/actions/actions-icon-open.webp')
                background-size 38px 38px